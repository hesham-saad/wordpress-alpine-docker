# Coolify Environment Variables
# Copy this file to .env and configure your values

# Domain Configuration (Required for Coolify)
DOMAIN=yourdomain.com

# WordPress Database Configuration
SERVICE_USER_WORDPRESS=wordpress_user
SERVICE_PASSWORD_WORDPRESS=your_secure_wordpress_password_here

# Database Root Password
SERVICE_PASSWORD_ROOT=your_secure_root_password_here

# Optional: WordPress Configuration
# WORDPRESS_DEBUG=false
# WORDPRESS_DEBUG_LOG=false
# WORDPRESS_DEBUG_DISPLAY=false
